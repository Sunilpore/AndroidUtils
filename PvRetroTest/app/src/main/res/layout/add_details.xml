<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <TextView
                android:id="@+id/id_pd"
                android:layout_height="wrap_content"
                android:width="0dp"
                android:layout_weight="1"
                android:text="ID"
                android:layout_width="wrap_content" />

            <EditText
                android:id="@+id/id_pd_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1" />

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Patient ID" />

            <EditText
                android:id="@+id/p_id_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1" />

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/presc_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="Prescription ID" />

            <EditText
                android:id="@+id/presc_id_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="5" />

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="Date" />

            <EditText
                android:id="@+id/p_date_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="5" />

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="Name" />

            <EditText
                android:id="@+id/p_name_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Akshat Joshi" />

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_age"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="Age" />

            <EditText
                android:id="@+id/p_age_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="36" />

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_sex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="Sex" />

            <EditText
                android:id="@+id/p_sex_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="MALE" />

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="Address" />

            <EditText
                android:id="@+id/p_add_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Plot. 23, London street 23,London"/>

        </LinearLayout>>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p_mob_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:text="Mob No" />

            <EditText
                android:id="@+id/p_mob_no_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9863264571"/>

        </LinearLayout>>

    </LinearLayout>



</ScrollView>